{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "connectionString": "Data Source=192.168.1.86; Initial Catalog=Serilog; Persist Security Info=True;User ID=sa;Password=Macross#2012; TrustServerCertificate=True;",
  "Serilog": {
    //"Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File", "Serilog.Sinks.MSSqlServer" ],    
    "WriteTo": [
      {
        "Name": "Console",
        "restrictedToMinimumLevel": "Information"
      },
      {
        "Name": "File",
        "Args": {
          "path": "log.txt",
          "rollingInterval": 3,
          "retainedFileCountLimit": 10
        },
        "restrictedToMinimumLevel": "Fatal"
      },
      {
        "Name": "MSSqlServer",
        "Args": {
          "connectionString": "Server=192.168.1.86;Database=Serilog; User ID=sa;Password=Macross#2012; TrustServerCertificate=True;",
          //"formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact",
          "sinkOptionsSection": {
            "tableName": "Log",
            "schemaName": "dbo",
            "autoCreateSqlTable": true,
            "batchPostingLimit": 1
          }
        },
        "restrictedToMinimumLevel": "Warning"
      },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl":  "http://192.168.1.86:8081"          
        }
      }
    ],
    "Enrich": [ "WithThreadId" ]
  }

}